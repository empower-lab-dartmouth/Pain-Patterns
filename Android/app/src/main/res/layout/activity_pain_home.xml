<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PainHomeActivity">

    <Button
            android:text="ESM Survey"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/esmSurveyButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="90dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@android:color/holo_purple"
            android:textColor="@android:color/white" android:textSize="25sp" android:typeface="sans"
            android:textStyle="bold"
            android:onClick="onESMClick"/>
    <Button
            android:text="Daily Diary"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/dailyDiaryButton" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/esmSurveyButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:background="@android:color/holo_red_light" android:textColor="@android:color/white"
            android:textSize="25sp" android:typeface="sans" android:textStyle="bold"
            android:onClick="onDailyDiaryClick"/>
    <Button
            android:text="Contact"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/contactButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white" android:textSize="25sp" android:typeface="sans"
            android:textStyle="bold"
            android:onClick="onContactClicked" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/dailyDiaryButton"/>
    <Button
            android:text="About"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:id="@+id/aboutButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/holo_orange_light"
            android:textColor="@android:color/white" android:textSize="25sp" android:typeface="sans"
            android:textStyle="bold"
            android:onClick="onAboutClicked"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/contactButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>